{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "$port=3000; $tcp = Get-NetTCPConnection -LocalPort $port -ErrorAction SilentlyContinue; if ($tcp) { $tcp | ForEach-Object { Stop-Process -Id $_.OwningProcess -Force }; Start-Sleep -Seconds 1 }; pnpm dev",
      "problemMatcher": [
        {
          "pattern": [
            {
              "regexp": ".",
              "file": 1,
              "location": 2,
              "message": 3
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "VITE v",
            "endsPattern": "http://localhost:[0-9]+"
          }
        }
      ],
      "label": "pnpm: dev",
      "detail": "vite",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
